<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.llyc.myapp.activity.CardView2Activity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp"
        app:title="Title" app:titleTextColor="#ffffff"/>
    <View
        android:id="@+id/v_top_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintDimensionRatio="H,5:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
    >
        <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@color/color_back_ground">

                <ImageView
                    android:id="@+id/iv_person"
                    android:layout_width="120dp"
                    android:layout_height="175dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_person"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView android:id="@+id/tv_name1"
                              android:layout_width="80dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="姓名"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_name"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:padding="15dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp" android:paddingBottom="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_person"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
                    <TextView android:id="@+id/tv_gender1"
                              android:layout_width="80dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="性别"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_gender"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:padding="15dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp" android:paddingBottom="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_person"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">
                    <TextView android:id="@+id/tv_nation1"
                              android:layout_width="80dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="民族"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_nation"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:padding="15dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">
                    <TextView android:id="@+id/tv_id_card_num1"
                              android:layout_width="120dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="证件号码"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_id_card_num"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6">
                    <TextView android:id="@+id/tv_address1"
                              android:layout_width="120dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="住址"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_address"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout7">
                    <TextView android:id="@+id/tv_birthday1"
                              android:layout_width="120dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="出生日期"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_birthday"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout8">
                    <TextView android:id="@+id/tv_phone1"
                              android:layout_width="120dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="电话号码"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <EditText android:id="@+id/et_phone"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:layout_weight="1"
                              android:background="@null"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout9">
                    <TextView android:id="@+id/tv_work_type1"
                              android:layout_width="120dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="工种"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_work_type"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:hint="请选择工种"
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout10">
                    <TextView android:id="@+id/tv_report_person1"
                              android:layout_width="120dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="上报人"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_report_person"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/color_back_ground_pure_white"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout11">
                    <TextView android:id="@+id/tv_report_company1"
                              android:layout_width="120dp"
                              android:layout_height="wrap_content"
                              android:gravity="right"
                              android:padding="15dp"
                              android:text="上报单位"
                              android:textColor="@color/text_color_666666"
                              android:textSize="@dimen/dp_15"/>
                    <TextView android:id="@+id/tv_report_company"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="16dp"
                              android:text=""
                              android:textColor="@color/text_color_333333"
                              android:textSize="@dimen/dp_15"/>
                </LinearLayout>

                <RelativeLayout android:id="@+id/rl_img"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="1dp"
                                android:background="@color/color_back_ground_pure_white"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
                                app:layout_constraintVertical_weight="1">
                    <TextView android:id="@+id/tv_img"
                              android:layout_width="60dp"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="8dp"
                              android:layout_marginLeft="8dp"
                              android:layout_marginTop="8dp"
                              android:gravity="right" android:paddingTop="4dp"
                              android:paddingBottom="4dp" android:text="图片"
                              android:textColor="@color/text_color_666666"/>
                    <ImageView android:id="@+id/iv_id_positive"
                               android:layout_width="120dp"
                               android:layout_height="80dp"
                               android:layout_marginStart="64dp"
                               android:layout_marginLeft="64dp"
                               android:layout_marginTop="48dp"
                               android:layout_marginBottom="16dp"
                               android:src="@mipmap/ic_launcher"/>
                    <ImageView android:id="@+id/iv_id_negative"
                               android:layout_width="120dp"
                               android:layout_height="80dp"
                               android:layout_alignParentTop="true"
                               android:layout_marginStart="200dp"
                               android:layout_marginLeft="200dp"
                               android:layout_marginTop="48dp"
                               android:layout_marginBottom="16dp"
                               android:src="@drawable/meinv"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="32dp"
                    android:background="@mipmap/btn_rectangle"
                    android:text="确认发送"
                    android:textColor="@color/color_back_ground_pure_white"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_img"/>

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
