<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
        android:text="btn1"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn2"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" android:text="btn2"
        android:textAllCaps="false" app:layout_constraintEnd_toStartOf="@+id/btn_card_view1"
        app:layout_constraintStart_toEndOf="@+id/btn1" app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btn_card_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" android:text="cardView1"
        android:textAllCaps="false" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btn_card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" android:text="cardView2"
        android:textAllCaps="false" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"/>
    <Button
        android:id="@+id/btn_card_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" android:text="cardView3"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn_card_view2"
        app:layout_constraintTop_toBottomOf="@+id/btn2"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
        android:text="btn3" android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_card_view1"/>
    <Button
        android:id="@+id/btn_clip_children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" android:text="clipChildren"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/btn_clip_children2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_card_view2"/>
    <Button
        android:id="@+id/btn_clip_children2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" android:text="clipChildren2"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/btn_web_view_qq"
        app:layout_constraintStart_toEndOf="@+id/btn_clip_children"
        app:layout_constraintTop_toBottomOf="@+id/btn_card_view3"/>
    <Button
        android:id="@+id/btn_web_view_qq"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
        android:text="webViewQQ" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_clip_children2"
        app:layout_constraintTop_toBottomOf="@+id/btn3"/>
</android.support.constraint.ConstraintLayout>